<div class="container">
  <div class="row">
    <div class="list-group">
      <% @posts.each do |post| %>
        <div class="low" style="margin-top:60px;">
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="low">
              <div class="list-group-item clearfix" style="box-shadow:5px 5px 7px -3px #ddd;">
                <div class="col-xs-5 col-sm-6 col-md-6">
                  <div class="article">
                    <h2 style="font-size:1.3em;">
                      <%= post.title %>
                    </h2>
                    <p style="font-size:1em;"><span style="color:#<%= post.color3 %>;">●</span>#
                      <%= post.color3 %>
                    </p>
                    <p style="font-size:1em;"><span style="color:#<%= post.color2 %>;">●</span>#
                      <%= post.color2 %>
                    </p>
                    <p style="font-size:1em;"><span style="color:#<%= post.color1 %>;">●</span>#
                      <%= post.color1 %>
                    </p>
                    <p style="font-size:0.8em;">作成日：
                      <%= post.created_at %>
                    </p>
                  </div>
                </div>
                <div class="col-xs-7 col-sm-6 col-md-6">
                  <div class="figure" style="background-image: linear-gradient(
                                          45deg,
                                          #<%= post.color1 %> 33%,
                                          #<%= post.color2 %> 33%, #<%= post.color2 %> 66%,
                                          #<%= post.color3 %> 50%, #<%= post.color3 %> 
                                    );
                          height:150px;
                          width:100%;
                          margin-top:12px;
                          border-radius:30px;"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
    </div>