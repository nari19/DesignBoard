<div class="col-md-12">
  <h1>ブログ記事編集</h1>
  <%= form_with model: @post, local: true do |form| %>
    <div class="form-group">
      <%= form.label "タイトル" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label "color 1" %>
      <%= form.text_field :color1, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label "color 2" %>
      <%= form.text_field :color2, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label "color 3" %>
      <%= form.text_field :color3, class: "form-control" %>
    </div>
    <%= form.submit '更新する', class: "btn btn-primary" %>
  <% end %>
</div>
